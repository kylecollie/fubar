<!DOCTYPE html>
<html>
<head>
    <title>Fubar - @ViewBag.Title</title>
    <meta charset="utf-8" />

    <link rel="stylesheet" href="~/css/site.css" />

</head>

<body>

    <div id="sidebar">
        <img src="~/img/wood_good.jpg" alt="headshot" class="headshot" />
        <span id="username">Kyle Collie</span>
        <ul class="menu">
            <li class="active"><a asp-controller="App" asp-action="Index">Home</a></li>
            <li><a asp-controller="App" asp-action="About">About</a></li>
            <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
        </ul>

    </div>

    <div id="wrapper">
        <div id="main">
            <div>
                <button id="sidebarToggle">Hide Sidebar</button>
            </div>
            <div>
                @RenderBody()
            </div>
        </div>
        <div id="footer">
            &copy; 2016 Lumberjack LLC
        </div>
    </div>

    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/js/site.js"></script>

    @RenderSection("Scripts", false)

</body>
</html>